<Styles xmlns="https://github.com/avaloniaui">
	<Style Selector="Menu">
		<Setter Property="Padding" Value="{StaticResource StandardMarginVertical}" />
		<Setter Property="Background" Value="{StaticResource AccentBrush}" />
	</Style>

	<Style Selector="MenuItem">
		<Setter Property="Background" Value="{StaticResource AccentBrush}" />
		<Setter Property="Padding" Value="{StaticResource DoubleMarginAll}" />
		<Setter Property="Foreground" Value="{StaticResource ForegroundBrush}" />
	</Style>

	<Style Selector="TextBlock">
		<Setter Property="Foreground" Value="{StaticResource ForegroundBrush}" />
		<Setter Property="Margin" Value="{StaticResource DoubleMarginAll}" />
		<Setter Property="FontFamily" Value="Lucida Console" />
	</Style>

	<Style Selector="Polygon">
		<Setter Property="StrokeLineCap" Value="Square" />
	</Style>
</Styles>