<UserControl x:Class="Macabresoft.Zvukosti.Windows.Controls.SkullControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="_control">
    <Border HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
        <Canvas x:Name="_canvas"
                Height="Auto"
                HorizontalAlignment="Stretch"
                Background="Black">
            <Polyline x:Name="_outline"
                      Stroke="Green"
                      StrokeThickness="1" />
            <Polyline x:Name="_leftEye"
                      Stroke="Green"
                      StrokeThickness="1" />
            <Polyline x:Name="_rightEye"
                      Stroke="Green"
                      StrokeThickness="1" />
        </Canvas>
    </Border>
</UserControl>