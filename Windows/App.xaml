<Application x:Class="Macabresoft.Zvukosti.Windows.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Style/Theme.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Style/Margins.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Style/Text.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Style/ImplicitStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>